alias ll='ls -la'
alias cd-='cd -'

alias gs='git status'
alias gl='git log'
alias gd='git diff'
alias gf='git fetch'
alias ga='git add -u'

alias fp='fzf --preview "bat --style=numbers --color=always --line-range :500 {}"'
alias grep=rg
alias find='fd'
alias fr='find|rg'
alias cat='bat'
alias k='k --almost-all --human --no-vcs'

alias zshreload='source ~/.zshrc'

rgf(){
  rg --files | fzf
}
